<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>YODAFY</title>
  <link rel="stylesheet" href="css/normalize.css">
  <link rel="stylesheet" href="css/main.css">
</head>
<body>
  <header>
    <h1>YODAFY</h1>
  </header>
  <div>
    <h2>Search song</h2>
    <form action="/search" method="POST">
      <input type="text" name="searchTerm" placeholder="Enter an Song">
      <input type="submit" value="Search">
    </form>
  </div>
  <div class="results-container">
    <h3>Search results</h3>
      <ul>
        <% songs.forEach((song) => { %>
          <li>
            <p>Title: <%= song.track.track_name %></p>
            <p>Artist: <%= song.track.artist_name %></p>
            <p>Album: <%= song.track.album_name %></p>
            <form action="/lyrics" method="POST">
              <input type="hidden" name="selectSong" value="<%= song.track.track_id %>">
              <input type="submit" value="Get Lyrics">
            </form>
          </li>
        <% }); %>
      </ul>
  </div>

  <div class="lyrics-container">
    <h3> Song Lyrics </h3>
    <textarea rows="10" cols="30" name="yodafy" form="lyrics-form"><%= results.lyrics_body %></textarea>
    <form action="/yoda" method="POST" id="lyrics-form">
      <input type="submit" value="Yodafy Lyrics">
    </form>

  </div>

  <div class="yoda-container">
    <h3> Yodafy Lyrics </h3>
    <p> <%= yoda.body %></p>
  </div>
</body>
</html>
